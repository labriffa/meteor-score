<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBlack">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.developments.briffa.lewis.weightless.fragments.EncyclopediaFragment"
        android:id="@+id/encyclopedia_fragment"
        android:layout_weight="1" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.developments.briffa.lewis.weightless.fragments.EncyclopediaDetailsFragment"
        android:id="@+id/encyclopedia_details_fragment"
        android:layout_weight="2"
        android:layout_marginLeft="2dp"
        />

</LinearLayout>